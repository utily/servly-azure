{
	"name": "servly-azure",
	"version": "0.2.0",
	"description": "Azure Functions target for Servly.",
	"author": "PayFunc",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/payfunc/servly-azure"
	},
	"bugs": {
		"url": "https://github.com/payfunc/servly-azure/issues"
	},
	"homepage": "https://payfunc.com/open-source/servly-azure",
	"private": false,
	"main": "dist/cjs/index.js",
	"module": "dist/mjs/index.js",
	"exports": {
		".": {
			"import": {
				"types": "./types/mjs/index.d.ts",
				"default": "./dist/mjs/index.js"
			},
			"require": {
				"types": "./types/cjs/index.d.ts",
				"default": "./dist/cjs/index.js"
			}
		}
	},
	"git": {
		"tagName": "v${version}"
	},
	"github": {
		"release": true
	},
	"jest": {
		"transform": {
			"^.+\\.(j|t)sx?$": "ts-jest"
		},
		"transformIgnorePatterns": [
			"<rootDir>/node_modules/(?!(cryptly|authly|gracely|isoly|servly|node-fetch|fetch-blob|data-uri-to-buffer|formdata-polyfill)/.*)"
		],
		"globals": {
			"ts-jest": {
				"tsconfig": "tsconfig.test.json"
			}
		},
		"testEnvironment": "node",
		"testRegex": "((\\.|/)(test|spec))(\\.|\\/.+)(jsx?|tsx?)$",
		"testPathIgnorePatterns": [
			"node_modules/",
			"dist/"
		],
		"collectCoverageFrom": [
			"**/*.{ts,tsx,js,jsx}",
			"!**/node_modules/**",
			"!**/dist/**"
		],
		"preset": "ts-jest",
		"testMatch": null
	},
	"scripts": {
		"dev": "watch 'npm run build' .",
		"lint": "eslint '**/*.{js,ts,tsx}'",
		"fix": "eslint '**/*.{js,ts,tsx}' --fix",
		"build": "rimraf dist/* && tsc -p tsconfig.json && tsc -p tsconfig-cjs.json && ./fixup.sh",
		"test": "jest",
		"test:watch": "watch jest",
		"prepare": "npm run build",
		"clean": "rimraf dist node_modules coverage"
	},
	"dependencies": {
		"@azure/functions": "^3",
		"isoly": "2.0.30",
		"servly": "0.4.0"
	},
	"devDependencies": {
		"@types/jest": "^28",
		"@types/node": "^18",
		"@typescript-eslint/eslint-plugin": "5.23.0",
		"@typescript-eslint/parser": "5.23.0",
		"babel-jest": "^28",
		"eslint": "8.4.1",
		"eslint-plugin-prettierx": "github:utily/eslint-plugin-prettierx#utily-20231004",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"jest": "^28",
		"prettierx": "github:utily/prettierx#utily-20231004",
		"rimraf": "^5.0.5",
		"ts-jest": "^28",
		"typescript": "^4",
		"watch": "0.13.0"
	}
}
